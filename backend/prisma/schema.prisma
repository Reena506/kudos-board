generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board{
  id Int @id @default(autoincrement())
  title String
  // description String
  author String
  category String
  cards Card[]
}

model Card{
  id Int @id @default(autoincrement())
  text String
  author String
  gif String
  boardId Int 
  upvotes Int  @default(0)
  board   Board @relation(fields: [boardId], references: [id])
  
}



